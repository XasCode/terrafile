{
  "name": "terrafile",
  "version": "0.1.0-alpha.1",
  "description": "",
  "main": "./dist/terrafile.ts",
  "bin": {
    "terrafile": "./dist/terrafile"
  },
  "scripts": {
    "test": "npm run build && jest",
