    "format": "prettier-standard '**/*.ts'",
    "check-eslint-config": "eslint --print-config . | eslint-config-prettier-check",
    "check-code": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xascode/terrafile.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xascode/terrafile/issues"
  },
  "homepage": "https://github.com/xascode/terrafile#readme",
  "dependencies": {
    "axios": "^0.21.1",
    "commander": "^7.2.0",
    "fs-extra": "^9.1.0",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2",
    "touch": "^3.1.0"
  },
  "devDependencies": {
    "@jestaubach/eslint-config": "^0.0.1",
    "@types/fs-extra": "^9.0.11",
    "@types/jest": "^26.0.23",
    "@types/mkdirp": "^1.0.1",
    "@types/rimraf": "^3.0.0",
    "@types/touch": "^3.1.1",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.22.1",
    "codecov": "^3.8.1",
    "coveralls": "^3.1.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-progress-bar-reporter": "^1.0.21",
    "lint-staged": "^11.0.0",
    "prettier-standard": "^16.4.1",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "tsc": "^2.0.3",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn check-eslint-config && yarn check-code"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
