{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts", "node_modules/@types"
  ],
  "exclude": [
    "node_modules", "__mocks__/**/*.ts", "dist", "__tests__/**/*.ts"
  ],
  "typeRoots": [
    "node_modules/@types", "src"
  ]
}
