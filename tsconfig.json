{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*.ts", "node_modules/@types"
  ],
  "exclude": [
    "node_modules", "__tests__/**/*.ts", "__mocks__/**/*.ts", "dist"
  ],
  "typeRoots": [
    "node_modules/@types", "src"
  ],
  "types": [
    "jest"
  ]
}